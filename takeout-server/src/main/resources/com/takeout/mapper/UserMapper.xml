<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.takeout.mapper.UserMapper">
    <insert id="insert" parameterType="com.takeout.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user
            (openid,name,phone,sex,id_number,avatar,create_time)
        VALUES
            (#{openid},#{name},#{phone},#{sex},#{idNumber},#{avatar},#{createTime})
    </insert>

    <select id="queryById" resultType="com.takeout.entity.User">
        SELECT * FROM user
        WHERE openid = #{openId}
    </select>
</mapper>